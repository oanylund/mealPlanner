$margin-top: 20px;
$nav-width: 120px;


// vertical nav
ul.VN-navbar:first-of-type {
  margin-top: $margin-top;
}

ul.VN-navbar {
  width: $nav-width;
  list-style-type: none;
  margin-bottom: 0;
  padding: 0;
  font-size: 14px;
  li {
    display: flex;
    height: 30px;
    a > span {
      padding-left: 10px;
    }
  }
  li.VN-sub-list-item {
    margin-left: 10px;
    height: 25px;
    font-size: 12px;
  }
}

a.VN-nav-link:link, a.VN-nav-link:active, a.VN-nav-link:visited {
  display: flex;
  align-items: center;
  color: $fontColor;
  text-decoration: none;
  width: 100%;
  height: 100%;
  cursor: pointer;
  &:hover {
    color: $fontHoverColor;
  }
}

a.VN-nav-sub-item, a.VN-nav-sub-item:active, a.VN-nav-sub-item:visited {
  background-color: $subBackColor;
  padding-left: 10px;
  &:hover {
    color: $fontHoverColor;
  }
}

i.nav-chevron {
  width: 20px;
  display: flex;
  align-items: center;
  justify-content: center;
  color: $fontColor;
  font-size: 10px;
  cursor: pointer;
  &:hover {
    background-color: $hoverColor;
    color: $fontHoverColor;
  }
}
